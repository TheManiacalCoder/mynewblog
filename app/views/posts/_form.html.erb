<% @posts %>

<%= form_for @posts do |f| %>
	<% if @posts.errors.any? %>
		<h2><%= pluralize(@posts.errors.count, "error") %> Prevented this post from saving:</h2>
		<ul>
			<% @posts.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
		<% end %>

		<%= f.label :tile%><br>
		<%= f.text_field :tile%>

		<br>
		<br>

		<%= f.label :content, "Write your article here." %><br>
		<%= f.text_area :content, :class => "tinymce", :rows => 40, :cols => 120 %>
		<br>
		<br>

		<%= f.submit %>

	<% end %>
	<%= tinymce %>