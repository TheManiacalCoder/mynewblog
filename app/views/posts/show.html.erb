<div id="post_show_content" 
		class="wrapper_padding">
			<header>
				<p class="date"><%= @posts.created_at.strftime("%A, %b %d") %></p>
				<h1><%= @posts.tile %></h1>
			</header>
			<br>
			<br>
			<div id="content" class="skinnywrapper">
			<hr>
			<p><%= simple_format @posts.content %></p>
			<hr>
				
			</div>
			<div id="content" class="skinnywrapper">
			<% if user_signed_in? %>
				<div id="admin_links">
					<%=link_to "Edit Article", edit_post_path(@posts)%>
					<%=link_to "Delete Article", post_path(@posts), method: :delete, data: {confirm: "Are You Sure?"}  %>	
						
				</div>
			<% end %>

			<div id="sharebox" class="skinnywrapper">
				<p3>Please share '<%= @posts.tile %>'</p>
				<a onclick="javascript:window.open('http://twitter.com/share?text=<%= @posts.tile %> by @seanmcraig - &amp;url=<%= url_for([@posts, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
				   
				   <a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([@posts, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>

				<a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@posts, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>
			</div>

			<hr>

				<%=render 'disqus' %>

		</div>

